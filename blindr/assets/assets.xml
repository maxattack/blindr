<assets id="GameAssets" target="gles">
	<output
		wordsize="32"
		endian="little"
		binpath="assets.bin"
		pfpath="assets.pf"
		srcdir="../source"
	/>

	<fontsheet id="flixel" path="nokiafc22.ttf" size="8" />
	<texture id="Background">
		<image id="background" path="background.png" />
	</texture>

	<texture id="Title">
			<image id="title" path="title.png" pivot="center" />
	</texture>

	<texture id="HUD">
		<image id="go" path="GO.png" pivot="center" />
	</texture>

	<texture id="Sprites">
		<image id="camel" path="camel/idle_#.png" pivot="center" />
		<image id="camel_hump" path="camel/hump.png" pivot="center" />
		<image id="camel_jump" path="camel/jump_#.png" pivot="center" />
		<image id="camel_walk" path="camel/walk_#.png" pivot="center" />
		
		<image id="gazer_body" path="gazer/gazer_body_#.png" pivot="center" />
		<image id="gazer_eyeball" path="gazer/gazer_eyeball.png" pivot="center" />
		<image id="gazer_iris" path="gazer/gazer_iris.png" pivot="center" />
		<image id="gazer_eyelid" path="gazer/gazer_eyelid_#.png" pivot="center" />
		
		<image id="bomb" path="bomb/bomb_fall_0.png" pivot="center" />
		<image id="bomb_bounce" path="bomb/bomb_bounce_#.png" pivot="center" />

		<image id="combo" path="combo/x#.png" pivot="center" />
		
		<image id="explosion" path="explosion/explosion_#.png" pivot="center" />

	</texture>


	<sample id="jump" path="sfx/jump.wav" />
	<sample id="juggle" path="sfx/juggle.wav" />
	<sample id="hit" path="sfx/hit.wav" />
	<sample id="expl" path="sfx/explosion.wav" />

	<tilemap id="level" path="maps/level.tmx" />

</assets>
